<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorPrimary"
    android:fitsSystemWindows="true"
  >


    <RelativeLayout
        android:id="@+id/rl_me"
        android:layout_marginRight="@dimen/xdp_15"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/xdp_15"

        android:layout_width="@dimen/xdp_108"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="@dimen/xdp_5"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/xdp_108"
            android:layout_height="@dimen/xdp_30"
            android:background="@drawable/btn_background_login"
            />
        <ImageView
            android:id="@+id/iv_menu"
            android:layout_width="@dimen/xdp_38"
            android:layout_height="@dimen/xdp_38"
            android:transitionName="@string/me_transition_name"
            android:src="@drawable/ic_launcher" />
<LinearLayout
    android:layout_centerVertical="true"
    android:layout_alignParentRight="true"
    android:layout_width="wrap_content"
    android:orientation="horizontal"
    android:layout_marginRight="@dimen/xdp_10"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="@dimen/xdp_18"
        android:src="@drawable/gold"
        android:layout_height="@dimen/xdp_18"/>
    <TextView
        android:layout_gravity="center_vertical"
        android:text="000"
        android:layout_marginLeft="@dimen/xdp_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
</LinearLayout>

    </RelativeLayout>





    <ImageView
        android:layout_marginRight="@dimen/xdp_15"
        android:id="@+id/iv_search"
        android:layout_width="@dimen/xdp_38"
        android:layout_height="@dimen/xdp_38"
        android:layout_gravity="end|center_vertical"
        android:transitionName="@string/message_transition_name"
        android:background="@drawable/btn_action_bg_selector"
        android:contentDescription="@null"
        android:scaleType="centerInside"
        android:src="@drawable/ic_launcher" />
</FrameLayout>