<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/xdp_43"
    android:background="?attr/colorPrimary"
    android:fitsSystemWindows="true"

   >

    <ImageView
        android:layout_marginLeft="@dimen/xdp_15"
        android:layout_gravity="center_vertical"
        android:id="@+id/iv_back"
        android:layout_width="@dimen/xdp_24"
        android:layout_height="@dimen/xdp_24"
        android:background="@drawable/btn_action_bg_selector"
        android:contentDescription="@null"
        android:scaleType="centerInside"
        android:transitionName="@string/me_transition_name"
        android:src="@drawable/back" />



    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/login"
        android:textSize="@dimen/xsp_18"
        android:textColor="@color/grey_333"
       />
</FrameLayout>